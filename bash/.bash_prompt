# Source .colors
#[[ -f .colors ]] && . .colors
[[ -f ~/.dotfiles/bash/.colors ]] && . ~/.dotfiles/bash/.colors

# Cursors
# Block
echo -e '\033[?6c'
# Underline
#echo -e '\033[?2c'

#export HEY=`acpi|grep -c "Discharging"`

#[[ `command -v acpi` ]] && PROMPT_COMMAND='echo "" ; acpi'

num=0

function set_batt_info() {
	if [[ `command -v acpi` ]]; then
		BATT_INFO=`acpi`
	else
		(( num += 1))
		BATT_INFO="acip not found $num"
	fi
	export BATT_INFO
}

PROMPT_COMMAND="set_batt_info"

PS1="\n\$BATT_INFO\n[\u@\h:\W]\$ "
