# Git info
# Colors for Login type SSH vs local

num=0

function set_batt_info() {
	if [[ `command -v acpi` ]]; then
		BATT_INFO=`acpi`
	else
		(( num += 1))
		BATT_INFO="acip not found $num"
	fi
	export BATT_INFO
}

[[ `command -v acpi` ]] && PROMPT_COMMAND="set_batt_info"

